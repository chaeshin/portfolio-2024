<% puts "Project ID: #{project_id}" %>
<% project = data.projects.find { |p| p.id == project_id } %>
<div class="container">
  <div class="project-name-with-links">
    <span class="project-name-heading"><%= "#{project.name}" %></span>


  </div>



  <div class="custom-margin">
    <div class="paragraph">
      <div><span class="project-descriptions">Links </span><span> | <% link_to project.github, class: 'external-link', target: '_blank' do %><i class="fa-brands fa-github fa-lg"></i><% end %><% if project.online? %><% link_to project.url, class: 'external-link', target: '_blank' do %><i class="fas fa-external-link-alt fa-lg"></i><% end %><% end %></span></div>
      <div><span class="project-descriptions">Description </span><span> | <%= project.description %></span></div>
      <div><span class="project-descriptions">Tech Stack </span><span> | <%= project.tech_stack %></span></div>
      <div><span class="project-descriptions">Role </span><span> | <%= project.role %></span></div>
      <div><span class="project-descriptions">Team </span><span> | <%= project.team %></span></div>
      <% if project.note %>
        <div><span class="project-descriptions">Note</span><span> | <%= project.note %></span></div>
      <% end %>

    </div>

    <div class="custom-margin-right">
      <div class="frame custom-margin40">
        <iframe class="responsive-iframe" src=<%= "#{project.video}" %> frameborder="0" allowfullscreen></iframe>
      </div>

      <div class="custom-margin80 custom-margin-bottom d-flex justify-content-center">
        <div class=<%= "#{project.device_wrapper}" %>>
          <div class='<%= "device #{project.device}" %>'>
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <%= image_tag project.image.first, style: 'height:100%;width:100%;', alt: "project image" %>
                </div>
                <% project.image[1..-1].each do |image| %>
                  <div class="carousel-item">
                    <%= image_tag image, style: 'height:100%;width:100%;', alt: "project image" %>
                  </div>
                <% end %>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>






